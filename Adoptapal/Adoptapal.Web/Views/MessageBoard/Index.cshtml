@model IEnumerable<Adoptapal.Business.Definitions.MessageBoard>

@{
    ViewData["Title"] = "Message Board";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = Context.Session.GetString("UserId");
}

<h1>Schwarzes Brett</h1>

<hr />

@{
    if(userId != null)
    {
        <div class="text-center mb-4">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    }
}

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body">
                    <div class="text-center">
                        <h3 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h3>
                    </div>
                    <div class="text-center">
                        <p class="card-title">@Html.DisplayFor(modelItem => item.Text)</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>