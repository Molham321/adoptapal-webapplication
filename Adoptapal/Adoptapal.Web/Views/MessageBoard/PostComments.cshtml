@model IEnumerable<Adoptapal.Business.Definitions.Comment>

@{
    ViewData["Title"] = "PostComments";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var userId = Context.Session.GetString("UserId");
}

<h1>Comments</h1>

<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-6">
            <div class="card mb-4">
                <div class="card-body" max-height="50px">
                    <div class="text-start">
                        <p class="card-title">comment by @Html.DisplayFor(modelItem => item.User.Name) (@Html.DisplayFor(modelItem => item.User.Email))</p>
                    </div>
                    <hr>
                    <div class="text-start">
                        <p class="card-title">@Html.DisplayFor(modelItem => item.Text)</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>