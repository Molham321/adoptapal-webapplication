@model Adoptapal.Business.Definitions.User

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/accountForms.css" asp-append-version="true" />

<section class="vh-50">
    <div class="container py-5 h-50">
        <div class="row d-flex justify-content-center align-items-center h-50">
            <div class="col col-xl-10">
                <div class="card" style="border-radius: 1rem;">
                    <div class="row g-0">
                        <div class="col-md-6 col-lg-7 d-flex align-items-center">
                            <div class="card-body p-4 p-lg-5 text-black">

                                <form asp-action="Register">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="d-flex align-items-center mb-2 pb-1">
                                        <span class="h1 fw-bold mb-0">Register</span>
                                    </div>

                                    <h5 class="fw-normal mb-2 pb-3" style="letter-spacing: 1px;">Sign into your account</h5>

                                    <div class="form-outline mb-2">
                                        <label asp-for="Name" class="control-label">Name</label>
                                        <input asp-for="Name" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label asp-for="Email" class="control-label"></label>
                                        <input asp-for="Email" class="form-control" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label asp-for="Password" class="control-label">Password</label>
                                        <div class="input-group">
                                            <input asp-for="Password" type="password" id="password_Id" class="form-control" required />
                                            <button type="button" class="btn btn-outline-secondary" id="password-toggle">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-2">
                                        <label class="control-label">Confirm Password</label>
                                        <div class="input-group">
                                            <input type="password" id="confirmPassword_Id" class="form-control" required />
                                            <button type="button" id="confirmPassword-toggle" class="btn btn-outline-secondary">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                        <span id="ConfirmPasswordTextDanger" class="text-danger"></span>
                                    </div>

                                    <div class="pt-1 mb-2">
                                        <button class="btn btn-dark btn-lg btn-block" id="submit_ID" type="submit">Create</button>
                                    </div>

                                    <p class="mb-3 pb-lg-2" style="color: #393f81;">
                                        You have an account?
                                        <a asp-action="Login">Back to Login</a>
                                    </p>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/togglePasswordVisibility.js"></script>
    <script src="~/js/checkPassword.js"></script>
}
